/**index.wxss**/
page {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.top {
  width: 100%;
}
.nav {
  width: 100%;
  height: 180rpx;
  background-image: linear-gradient(-5deg,#e93b3d,rgb(238, 226, 226));
  padding: 50rpx 0 0 20rpx;
  box-sizing: border-box;
  position: relative;
}
input {
  border-radius: 50rpx;
  width: 610rpx;
  padding: 5rpx 0 5rpx 90rpx;
  background-color: #fff;
  border: 4rpx solid #e93b3d;
}
.button {
  box-sizing: border-box;
  right: 30rpx;
  bottom: 10rpx;
  position: absolute;
  width: 100rpx;
  color: #fff;
  display: inline-block;
  padding-left: 18rpx;
  padding-bottom: 2rpx;
  border-radius: 50px;
  background-color: #e93b3d;
}
.nav image {
  margin-left: 10rpx;
  width: 65rpx;
  height: 60rpx;
}
.nav .icon {
  position: absolute;
  width: 60rpx;
  height: 50rpx;
  left: 35rpx;
  bottom: 7rpx;
}

.tops {
  position: relative;
  top: -51rpx;
  left: 105rpx;
  height: 40rpx!important;
}

.top swiper-item {
  height: 40rpx!important;
  color: rgb(126, 121, 121);
}


/*  */

.container {
  height: 100%;
  background-color: rgb(245, 245, 245);
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.swiper {
  padding: 30rpx 20rpx 0;
  background-image: linear-gradient(#e93b3d, rgb(255, 255, 255));
}

.swiper-xiao {
  width: 100%;
  border-radius: 20rpx;
  overflow: hidden;
}

.swiper-container {
  height: 150px;
}

.swiper-container image {
  width: 100%;
  height: 100%;
}

/* 列表 */
.swiper-container2 {
  width: 100%;
  height: 420rpx;
}

.swiper-container2 swiper-item {
  display: flex;
  flex-wrap: wrap;
}

.swiper-container2 swiper-item view {
  box-sizing: border-box;
  width: 20%;
  padding: 0 5rpx 40rpx 5rpx;
  text-align: center;
  font-size: 25rpx;
  /* font-weight: 200; */
}

.swiper-container2 swiper-item view:nth-child(-n+5) {
  padding: 20rpx 5rpx 0 5rpx;
}

.swiper-container2 swiper-item view image {
  display: block;
  margin: 0 auto;
  margin-bottom: 20rpx;
  width: 100rpx;
  height: 100rpx;
}

/* 秒杀 */
.miaosha {
  padding: 20rpx;
  position: relative;
}

.ms {
  border-radius: 20rpx;
  padding: 20rpx;
  background-color: #fff;
}

.miaosha .ms .bt {
  display: flex;
}

.miaosha .ms .bt text {
  padding-right: 15rpx;
}

.miaosha .ms .bt>text:nth-child(2) {
  color: red;
}

.miaosha .ms .bt .dc {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  top: 35rpx;
  left: 215rpx;
}

.miaosha .ms .bt .jt {
  margin-top: 6rpx;
  width: 35rpx;
  height: 35rpx;
}

.miaosha .ms .bt view {
  flex: 1;
  padding-left: 70rpx;
}

.miaosha .ms .bt view text:nth-child(odd) {
  display: inline-block;
  width: 30rpx;
  height: 46rpx;
  padding-left: 6rpx;
  border-radius: 10rpx;
  color: #fff;
  background-color: red;
}

.miaosha .ms .bt view text:nth-child(even) {
  position: relative;
  top: -3rpx;
  border-radius: 10rpx;
  font-weight: 700;
  color: red;
}

.miaosha .ms .nr view {
  display: inline-block;
  padding-top: 30rpx;
  width: 20%;
  height: 200rpx;
}

.msscroll {
  margin-top: 40rpx;
  /* 不换行 */
  white-space: nowrap;
}

.miaosha .ms .nr image {
  display: block;
  margin: 0 auto;
  width: 120rpx;
  height: 120rpx;
}

.miaosha .ms .nr text {
  display: block;
  margin: 15rpx auto;
  text-align: center;
  color: red;
}

.miaosha .ms .nr .zhyg {
  position: absolute;
  background-color: rgb(236, 231, 231);
  width: 40rpx;
  height: 300rpx;
  margin-left: 10rpx;
  padding-top: 0;
  margin-bottom: 0;
}

.miaosha .ms .nr .zhyg image {
  margin-top: 4rpx;
  width: 40rpx;
  height: 40rpx;
}

.miaosha .ms .nr .zhyg text {
  display: block;
  color: #000;
  white-space: normal;
}

/* 产品区 */
.cpzs {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: rgb(245, 245, 245);
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.cp {
  width: 49%;
  height: 600rpx;
  background-color: white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.cpzs .cp image {
  width: 100%;
  height: 300rpx;
}

.cpzs .cp .bottm {
  margin-top: 20rpx;
}

.cpzs .cp .bottm image {
  margin-left: 10rpx;
  width: 140rpx;
  height: 40rpx;
}

.cpzs .cp .bottm text {
  position: relative;
  bottom: 12rpx;
  right: -50rpx;
  display: inline-block;
  background-color: rgb(236, 231, 231);
  width: 106rpx;
  padding: 5rpx 0 5rpx 20rpx;
  font-weight: 100;
  border-radius: 50rpx;
  font-size: 28rpx;
  margin-right: 10rpx;
}

.cpzs .cp .cpbt {
  padding: 15rpx;
  font-size: 30rpx;
  line-height: 1.9;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  word-break: break-all;
  -webkit-box-orient: vertical;
}

.cpzs .cp .cpbt view {
  display: inline-block;
  position: relative;
  top: 0.1rem;
  display: inline-block;
  vertical-align: middle;
  margin-right: 0.25rem;
}

.cpzs .cp .cpbt image {
  width: 130rpx;
  height: 38rpx;
}

.cpzs .cp .zw {
  color: red;
  display: flex;
}
.cpzs .cp .zw view text {
  color: red;
  font-size: 50rpx;
}

.cpzs .cp .zw image {
  display: inline-block;
  width: 80rpx;
  height: 30rpx;
  margin-left: 10rpx;
  padding-top: 24rpx;
}
.cpzs .cp .zw>text {
  padding-top: 24rpx;
  font-size: 25rpx;
  color: rgb(139, 136, 136);
}
