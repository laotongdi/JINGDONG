/* pages/search/search.wxss */
.top {
  width: 100%;
}
.nav {
  display: flex;
  width: 100%;
  height: 120rpx;
  padding: 48rpx 0 0 20rpx;
  box-sizing: border-box;
  position: relative;
}
.nav image {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}
input {
  border-radius: 50rpx;
  width: 410rpx;
  padding: 10rpx 0 10rpx 30rpx;
  background-color: #f5f5f5;
}
.button {
  box-sizing: border-box;
  right: 220rpx;
  bottom: 13rpx;
  position: absolute;
  line-height: 50rpx;
  width: 100rpx;
  color: #fff;
  display: inline-block;
  padding-left: 18rpx;
  padding-bottom: 2rpx;
  border-radius: 50px;
  background-color: #e93b3d;
}

/*  */
.nr {
  padding: 20rpx;
}
.nrt {
  display: flex;
  font-size: 30rpx;
  justify-content: space-between;
}
.nrt .right {
  color: #999;
}
.nrb {
  display: flex;
  padding: 20rpx;
  font-size: 24rpx;
  flex-wrap: wrap;
  justify-content: space-around;
}
.nrb text {
  padding: 5rpx 10rpx 5rpx 10rpx;
  margin-bottom: 15rpx;
  background-color: #f0f2f5;
}
.nrb text:nth-child(-n+3) {
  color: #e93b3d;
}