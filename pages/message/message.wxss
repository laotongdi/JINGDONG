/* pages/message/message.wxss */
page {
  background-color: rgb(245, 245, 245);
}

.gwct {
  padding: 50rpx;
  text-align: center;
}

.gwct image {
  display: block;
  margin: 50rpx auto;
  width: 180rpx;
  height: 180rpx;
}

.tuijian {
  position: relative;
  margin-top: 50rpx;
  display: flex;
  padding: 0 20rpx 0 20rpx;
  align-items: center;
}


/*  */
.cpzs {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: rgb(245, 245, 245);
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.cp {
  width: 49%;
  height: 600rpx;
  background-color: white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  margin-top: 50rpx;
}

.cpzs .cp image {
  width: 100%;
  height: 300rpx;
}

.cpzs .cp .bottm {
  margin-top: 20rpx;
}

.cpzs .cp .bottm image {
  margin-left: 10rpx;
  width: 140rpx;
  height: 40rpx;
}

.cpzs .cp .bottm text {
  position: relative;
  bottom: 12rpx;
  right: -50rpx;
  display: inline-block;
  background-color: rgb(236, 231, 231);
  width: 106rpx;
  padding: 5rpx 0 5rpx 20rpx;
  font-weight: 100;
  border-radius: 50rpx;
  font-size: 28rpx;
  margin-right: 10rpx;
}

.cpzs .cp .cpbt {
  padding: 15rpx;
  font-size: 30rpx;
  line-height: 1.8;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  word-break: break-all;
  -webkit-box-orient: vertical;
}

.cpzs .cp .cpbt view {
  display: inline-block;
  position: relative;
  top: 0.1rem;
  display: inline-block;
  vertical-align: middle;
  margin-right: 0.25rem;
}

.cpzs .cp .cpbt image {
  width: 130rpx;
  height: 38rpx;
}

.cpzs .cp .zw {
  color: red;
  display: flex;
}
.cpzs .cp .zw view text {
  color: red;
  font-size: 50rpx;
}

.cpzs .cp .zw image {
  display: inline-block;
  width: 80rpx;
  height: 30rpx;
  margin-left: 10rpx;
  padding-top: 24rpx;
}
.cpzs .cp .zw>text {
  padding-top: 24rpx;
  font-size: 25rpx;
  color: rgb(139, 136, 136);
}

/*  */
.fix_btn {
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  z-index: 10;
  bottom: 100rpx;
  right: 20rpx;
}


.icon {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
