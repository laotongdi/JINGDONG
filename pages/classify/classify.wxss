/* pages/classify/classify.wxss */
page {
  height: 89.9%;
}

.top {
  display: flex;
  padding: 60rpx 0 20rpx 20rpx;
  border: 2rpx solid #ccc;
}

.top image {
  position: absolute;
  width: 70rpx;
  height: 60rpx;
}

.top text {
  display: block;
  flex: 1;
  text-align: center;
}

/*  */
.body {
  display: flex;
  width: 100%;
  height: 100%;
}

.body>view {
  height: 100%;
}

.cbl {
  width: 160rpx;
  height: 100%;
  text-align: center;
}

.cbl view {
  padding: 20rpx 0 20rpx 0;
  font-size: 28rpx;
  background-color: rgb(245, 245, 245);
}

.cbl .xuanzhong {
  color: red;
  background-color: white;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.nrwai {
  flex: 1;
}

.nr {
  width: 100%;
  height: 100%;
}

.nr .leiqu {
  margin: 38rpx 14rpx 0;
}

.nr .biaoti {
  font-size: 56rpx;
  color: #333;
}
.cphz {
  display: flex;
  flex-wrap: wrap;
}
.cphz .cp {
  width: 33.33%;
  height: 277rpx;
  text-align: center;
  color: #333;
  font-size: 30rpx;
}
.cphz image {
  width: 100%;
  height: 180rpx;
}
